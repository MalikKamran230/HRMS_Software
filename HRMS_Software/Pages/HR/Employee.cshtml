@page
@model HRMS.Pages.HR.EmployeeModel
@{
    ViewData["Title"] = "Employee";
}

<style>
	.input-error {
		border-color: red !important; /* Red border to indicate error */
		width: 95% !important; /* Shrink the input field */
		transition: width 0.3s ease; /* Smooth transition */
	}

		.input-error + .text-danger {
			font-size: 12px;
			margin-top: 5px;
			display: block;
		}
</style>

<div class="row">
	<div class="col-12">
		<div class="card mb-4">
			<div class="card-header pb-0 d-flex justify-content-between align-items-center">
				<h6>Employe Form</h6>
				<div>
					<a class="btn btn-primary btn-sm me-2" href="\eligibility\eligibilitylist">Back</a>
				</div>
			</div>
			<br />
			<div class="card-body px-0 pt-0 pb-2">
				<div class="container">
					<form method="post">
						<div id="wizardForm">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<!-- Step 1:-->
							<div class="step" id="step-1" style="display:block;">
								<h5 class="mb-4 text-primary">Personal Information</h5>
								<div class="row">
									<div class="col-md-4 mb-3">
										Pin Number
										<input id="PN" asp-for="cls_Employee.Code" type="text" disabled class="form-control" placeholder="Pin Number" aria-label="Pin Number">
									</div>
									<div class="col-md-4 mb-3">
